    </servlet>
    <servlet-mapping>
        <servlet-name>WebSocketScriptlet.es</servlet-name>
        <url-pattern>/ws/*</url-pattern>
    </servlet-mapping>
    -->
	<session-config>
		<session-timeout>5</session-timeout>
	</session-config>
</web-app>
